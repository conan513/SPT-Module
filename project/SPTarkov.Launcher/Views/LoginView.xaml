<UserControl x:Class="SPTarkov.Launcher.Views.LoginView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:helpers="clr-namespace:SPTarkov.Launcher.Helpers"
             xmlns:local="clr-namespace:SPTarkov.Launcher.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             x:Name="view">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="AUTO"/>
            <ColumnDefinition Width="AUTO"/>
            <ColumnDefinition Width="AUTO"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="AUTO"/>
            <RowDefinition Height="AUTO"/>
            <RowDefinition Height="AUTO"/>
            <RowDefinition Height="AUTO"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="AUTO"/>
        </Grid.RowDefinitions>

        <!-- Footer Image -->
        <Image Source="/Resources/bg-footer.png" Grid.Row="6" Stretch="UniformToFill" Grid.ColumnSpan="7"
               RenderOptions.BitmapScalingMode="Fant" Width="{Binding ActualWidth, ElementName=view}"
               />

        <!-- Email Controls -->
        <Label Content="Email" Grid.Column="1" Grid.Row="1"
                   />
        <TextBox Grid.Column="2" Grid.ColumnSpan="3" Grid.Row="1"
                 Text="{Binding login.Email}"
                 />

        <!-- Password Controls -->
        <Label Content="Password" Grid.Column="1" Grid.Row="2" 
                   />
        <TextBox Grid.Column="2" Grid.ColumnSpan="3" Grid.Row="2"
                 Text="{Binding login.Password}"
                 />

        <!-- Addtional Controls -->
        <Button Content="Register" Grid.Column="2" Grid.Row="4"
                Command="{Binding ShowRegisterCommand}"
                />

        <CheckBox Content="Login Automatically" Grid.Column="3" Grid.Row="4"
                  IsChecked="{Binding DefaultServer.UseAutoLogin}"
                  />

        <Button Content="Login" Grid.Row="6" Grid.ColumnSpan="7" Style="{StaticResource SPTBigButtonStyle}"
                HorizontalAlignment="Center" VerticalAlignment="Center"
                Command="{Binding LoginCommand}"
                />
    </Grid>
</UserControl>
